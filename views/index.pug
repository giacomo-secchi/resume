extends layout.pug

mixin definitionList(s, index) 
    dl.mb-5
        if s.title
            //- script 
            //-     | console.log(!{JSON.stringify(s)})
            dt(itemprop=(s.lists ? "name" : false))= s.title
            dd
                section= s.description
                    if s.organizations
                        each o in s.organizations
                            - var organization = o.type ? 'EducationalOrganization' : 'Organization';
                            div(itemscope, itemtype="http://schema.org/" + organization)
                                if o.title
                                    h2.fs-3
                                        span(itemprop="jobTitle")= o.title
                                if o.course
                                    h2.fs-3.mb-0
                                        span(itemprop="name")= o.course
                                p.mb-0
                                    span(itemprop="name")= o.name
                                if o.address
                                    div(itemprop="address" itemscope itemtype="http://schema.org/PostalAddress")
                                        span(itemprop="streetAddress")= o.address.streetAddress
                                        |,&nbsp;
                                        span(itemprop="addressLocality")= o.address.addressLocality 
                                        |,&nbsp;
                                        span(itemprop="addressRegion")= o.address.addressRegion
                                        |,&nbsp;
                                        span(itemprop="postalCode")= o.address.postalCode
                                        |&nbsp;
                                        span(itemprop="addressCountry")= o.address.addressCountry
                                p
                                    span.text-muted #{o.date.start} 
                                        if o.date.end
                                            | â€” #{o.date.end}
                                p
                                    span(itemprop="description") !{o.description}
                                    br 
                                    if o.link
                                        a(itemprop="url", href=o.link.url, target="_blank", title=o.link.text)= o.link.text
                    if s.lists
                        .row
                            each l in s.lists
                                .col
                                    ul.marker-list
                                        each i in l
                                            li(itemprop="itemListElement", itemscope) !{i}
    
block header 
    <nav class="navbar navbar-light bg-primary bg-gradient sticky-top bg-opacity-50 d-print-none py-3">
        <div class="container">
            <div class="d-flex">        
                
                <div class="input-group">
                    <label class="input-group-text bg-transparent" for="inputGroupSelect01">
                        <svg class="bi text-white" width="32" height="32" fill="currentColor">
                            <use xlink:href="bootstrap-icons.svg#translate"/>
                        </svg>
                    </label>
                    <select data-i18n-switcher class="form-select bg-transparent text-white" id="inputGroupSelect01" aria-label="Choose Language">
                        <option value="en">English</option>
                        <option value="it">Italiano</option>
                    </select>
                </div>
                
